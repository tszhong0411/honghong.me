{
  "private": true,
  "name": "honghong.me",
  "version": "0.0.0",
  "description": "My personal website and blog built with TypeScript, Next.js, and Tailwind CSS",
  "license": "AGPL-3.0-only",
  "author": "tszhong0411 <me@honghong.me> (https://github.com/tszhong0411/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tszhong0411/honghong.me.git"
  },
  "type": "module",
  "scripts": {
    "build": "next build",
    "check-updates": "pnpm dlx npm-check-updates --interactive --format group",
    "clean": "rm -rf .next .contentlayer coverage playwright-report test-results tsconfig.tsbuildinfo",
    "dev": "concurrently \"contentlayer dev\" \"cross-env NODE_OPTIONS='--inspect' next dev --turbo\"",
    "format": "prettier -w .",
    "postinstall": "prisma generate && contentlayer build",
    "lint": "next lint",
    "lint:fix": "eslint --fix .",
    "prepare": "husky install",
    "start": "next start",
    "test:coverage": "vitest --coverage --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:unit": "vitest run",
    "test:unit:ui": "vitest --ui",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@giscus/react": "^2.4.0",
    "@icons-pack/react-simple-icons": "^9.2.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@octokit/rest": "^20.0.2",
    "@prisma/client": "^5.8.1",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-aspect-ratio": "^1.0.3",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@t3-oss/env-nextjs": "^0.7.3",
    "@tabler/icons-react": "^2.46.0",
    "@types/hast": "^3.0.3",
    "canvas-confetti": "^1.9.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cmdk": "^0.2.0",
    "cobe": "^0.6.3",
    "contentlayer": "^0.3.4",
    "dayjs": "^1.11.10",
    "framer-motion": "^10.18.0",
    "geist": "^1.2.1",
    "github-slugger": "^2.0.0",
    "hastscript": "^8.0.0",
    "jiti": "^1.21.0",
    "marked": "^11.1.1",
    "next": "^14.0.4",
    "next-auth": "5.0.0-beta.4",
    "next-contentlayer": "^0.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-medium-image-zoom": "^5.1.10",
    "react-use": "^17.4.3",
    "rehype-pretty-code": "^0.12.3",
    "rss": "^1.2.2",
    "sharp": "^0.33.1",
    "shikiji": "^0.9.19",
    "swr": "^2.2.4",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "use-debounce": "^10.0.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@octokit/types": "^12.4.0",
    "@playwright/test": "^1.41.0",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@tszhong0411/eslint-config": "^1.0.38",
    "@tszhong0411/prettier-config": "^1.0.8",
    "@tszhong0411/tsconfig": "^1.0.3",
    "@types/canvas-confetti": "^1.6.4",
    "@types/mdx": "^2.0.10",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/rss": "^0.0.32",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "all-contributors-cli": "^6.26.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "eslint-plugin-playwright": "^0.21.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "fast-xml-parser": "^4.3.3",
    "husky": "^8.0.3",
    "jsdom": "^23.2.0",
    "lint-staged": "^15.2.0",
    "msw": "^2.1.1",
    "postcss": "^8.4.33",
    "prettier": "^3.2.2",
    "prisma": "^5.8.1",
    "schema-dts": "^1.1.2",
    "tailwindcss": "^3.4.1",
    "typescript": "5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "browserslist": {
    "production": [
      ">0.01%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      ">0.01%",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "next/core-web-vitals",
      "@tszhong0411/eslint-config"
    ],
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": "latest"
    },
    "overrides": [
      {
        "files": [
          "./src/tests/!(e2e)/**/*.test.{ts,tsx}"
        ],
        "extends": [
          "plugin:testing-library/react"
        ],
        "plugins": [
          "testing-library"
        ]
      },
      {
        "files": [
          "./src/tests/e2e/**/*.test.{ts,tsx}"
        ],
        "extends": [
          "plugin:playwright/recommended"
        ]
      }
    ]
  },
  "lint-staged": {
    "*.{js,jsx,cjs,mjs,ts,tsx}": [
      "eslint"
    ],
    "*.{json,css,md,mdx,js,jsx,ts,tsx,cjs,mjs}": [
      "prettier -c"
    ]
  },
  "prettier": "@tszhong0411/prettier-config"
}