    await login(page)
  })

  test('displays user stats', async ({ page }) => {
    await page.goto('/dashboard')

    await expect(page.getByTestId('total-views')).toBeVisible()
    await expect(page.getByTestId('total-likes')).toBeVisible()
  })
})
