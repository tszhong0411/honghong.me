{
  "name": "@tszhong0411/eslint-config",
  "version": "0.1.36",
  "description": "The eslint config for tszhong0411's projects",
  "license": "MIT",
  "author": "tszhong0411 <me@honghong.me> (https://github.com/tszhong0411/)",
  "homepage": "https://github.com/tszhong0411/honghong.me#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tszhong0411/honghong.me.git",
    "directory": "packages/eslint-config"
  },
  "bugs": {
    "url": "https://github.com/tszhong0411/honghong.me/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rslib build",
    "clean": "rm -rf .turbo dist",
    "dev": "concurrently \"rslib build --watch\" \"eslint-config-inspector\"",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint --fix .",
    "postpublish": "bash ./scripts/update-git-repo.sh",
    "type-check": "tsc --noEmit"
  },
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@eslint-react/eslint-plugin": "^1.40.4",
    "@eslint/js": "^9.24.0",
    "@next/eslint-plugin-next": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-testing-library": "^7.1.1",
    "eslint-plugin-turbo": "^2.5.0",
    "eslint-plugin-unicorn": "^58.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "local-pkg": "^1.1.1"
  },
  "peerDependencies": {
    "eslint": "^9.20.0"
  },
  "devDependencies": {
    "@eslint/config-inspector": "^1.0.2",
    "@tszhong0411/tsconfig": "workspace:*",
    "eslint": "^9.24.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{cjs,mjs,js,jsx,cts,mts,ts,tsx,json}": "eslint --fix"
  }
}
